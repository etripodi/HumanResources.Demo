@page
@using Nacho.JuanAlvarez.Localization
@using Nacho.JuanAlvarez.Web.Pages.Empleados
@using Microsoft.Extensions.Localization
@model IndexModel
@inject IStringLocalizer<JuanAlvarezResource> L
@section scripts
{
    <abp-script src="/Pages/Empleados/index.js" />
}
<abp-card>
    <abp-card-header>
        <abp-row>
            <abp-column size-md="_6">
                <abp-card-title>@L["Empleados"]</abp-card-title>
            </abp-column>
            <abp-column size-md="_6" class="text-right">
                <abp-button id="NewEmpleadoButton"
                            text="@L["NewEmpleado"].Value"
                            icon="plus"
                            button-type="Primary" />
            </abp-column>
        </abp-row>
    </abp-card-header>

    <abp-card-body>
        <input type="text" id="paisFilter" placeholder="País">
        <input type="text" id="areaFilter" placeholder="Área/Puesto">
        <input type="text" id="nroBusquedaFilter" placeholder="Nro. Búsqueda">
        <abp-table striped-rows="true" id="EmpleadosTable"></abp-table>
    </abp-card-body>
</abp-card>
